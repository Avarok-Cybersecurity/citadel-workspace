{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../out",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Citadel",
    "version": "0.0.0"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "citadel.protocol",
      "targets": "all"
    },
    "security": {
      "csp": null
    },

    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Citadel",
        "width": 800,
        "height": 600
      }
    ]
  }
}
